{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["ES5", "ES6", "ES7", "ESNext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "build",
    "src/setupTests.ts"
  ]
}
