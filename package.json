{
  "name": "veriportal-server",
  "version": "1.0.0",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "nodemon --watch src --watch .env src/index.ts",
    "test": "NODE_ENV=testing jest --coverage --verbose --watch",
    "knex": "knex",
    "precommit": "lint-staged"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "graphql": "^0.13.1",
    "graphql-tools": "^2.21.0",
    "jsonwebtoken": "^8.1.1",
    "knex": "^0.14.4",
    "lodash": "^4.17.5",
    "pg": "^7.4.1",
    "pg-connection-string": "^2.0.0",
    "rand-token": "^0.4.0",
    "ts-node": "^5.0.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.16.8",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.12.4",
    "@types/jest": "^22.1.3",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/knex": "^0.14.7",
    "@types/node": "^9.4.6",
    "@types/pg": "^7.4.4",
    "@types/supertest": "^2.0.4",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.15.1",
    "prettier": "^1.10.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.0"
  }
}
