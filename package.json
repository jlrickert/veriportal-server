{
  "name": "veriportal-server",
  "version": "1.0.0",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "nodemon --watch src --watch .env src/index.ts",
    "test": "jest --coverage --verbose --watch",
    "precommit": "lint-staged"
  },
  "nodemonConfig": {
    "ignore": ["node_modules"],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "ts-node": "^5.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/supertest": "^2.0.4",
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.15.1",
    "prettier": "^1.10.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.0"
  }
}
